<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity3" android:background="#21252B">

    <Button
            android:text="Volver"
            android:layout_width="130dp"
            android:layout_height="50dp" android:id="@+id/botonVolver3"
            android:background="#82CF8B" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp" android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="crear servicio"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/crear_servicio"
            android:backgroundTint="#45FF0000" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:textColor="#D2FFFFFF"/>
    <Button
            android:text="parar servicio"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/parar_servicio"
            android:backgroundTint="#45FF0000" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/reproducir" android:layout_marginBottom="135dp"
            app:layout_constraintBottom_toTopOf="@+id/botonVolver3" android:textColor="#D2FFFFFF"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/reproducir"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/crear_servicio"
            app:layout_constraintEnd_toStartOf="@+id/pausar" android:layout_marginEnd="75dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/picture_frame"
            android:id="@+id/parar" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/crear_servicio" android:layout_marginStart="75dp"
            app:layout_constraintStart_toEndOf="@+id/pausar"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/pausar" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/crear_servicio" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/reproducir" app:layout_constraintEnd_toStartOf="@+id/parar"
            android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>