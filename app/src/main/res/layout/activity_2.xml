<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2" android:background="#21252B">

    <Button
            android:text="Volver"
            android:layout_width="130dp"
            android:layout_height="50dp" android:id="@+id/botonVolver2"
            android:background="#82CF8B"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/lv"/>
    <Button
            android:text="Pulsa para crear la tabla"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/botonCrear"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp" app:layout_constraintEnd_toEndOf="parent" android:background="#45FF0000"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp" android:textColor="#D2FFFFFF"/>
    <Button
            android:text="insertar datos"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/botonInsertar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp" app:layout_constraintEnd_toEndOf="parent" android:background="#45FF0000"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/botonCrear"
            android:textColor="#D2FFFFFF"/>
    <Button
            android:text="consultar datos"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/botonConsultar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp" app:layout_constraintEnd_toEndOf="parent" android:background="#45FF0000"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/ej" android:textColor="#D2FFFFFF"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nj"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/idj" android:hint="Nombre del jugador"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/ej"
            android:textColor="#D2FFFFFF" android:textColorHint="#D2FFFFFF"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idj"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/botonInsertar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="ID del jugador" android:textColor="#D2FFFFFF"
            android:textColorHint="#D2FFFFFF"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ej"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nj" android:hint="Edad del jugador"
            android:textColor="#D2FFFFFF" android:textColorHint="#D2FFFFFF"/>
    <ListView
            android:layout_width="321dp"
            android:layout_height="148dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/botonConsultar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/lv"/>
</androidx.constraintlayout.widget.ConstraintLayout>